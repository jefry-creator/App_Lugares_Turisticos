<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bluey"
    tools:context=".DiscoverFragment"
    android:scrollbars="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#2C7BED">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/baseline_camera_24">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:background="@drawable/form_rounded"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/login_email"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Nombre del sitio"
                android:padding="10dp"
                android:textColor="@color/black">
            </EditText>

            <EditText
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:hint="DescripciÃ³n"
                android:layout_marginBottom="10dp"
                android:maxLines="15"
                android:gravity="top"
                android:padding="15dp"
                android:background="@drawable/rounded">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de apertura:"
                android:layout_gravity="start"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/light_bluey"
                android:textSize="17sp">
            </TextView>
            <TimePicker
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#2C7BED"
                android:headerBackground="@color/light_bluey"
                android:numbersSelectorColor="@color/light_bluey">

            </TimePicker>
        </LinearLayout>
    </LinearLayout>

</ScrollView>